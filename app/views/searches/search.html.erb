<div class="row">
	<div class="col-xs-9">
		<table class="table table-hover table-inverse">
			<% if @range == '2' %>
			    <thead>
			    	<tr>
			    		<th>image</th>
			    		<th>Title</th>
			    		<th>Opinion</th>
			    	</tr>
			    </thead>

			    <tbody>
			    	<% @book.each do |book| %>
			    	<tr>
			    		<td></td>
			    		<td><%= book.title %></td>
			    		<td><%= book.body %></td>
			    	</tr>
			    	<% end %>
			    </tbody>
			<% else %>
			    <thead>
			    	<tr>
			    		<th>image</th>
			    		<th>name</th>
			    		<th>introduction</th>
			    	</tr>
			    </thead>

			    <tbody>
			    	<% @user.each do |user| %>
			    	<tr>
			    		<td></td>
			    		<td><%= user.name %></td>
			    		<td><%= user.introduction %></td>
			    	</tr>
			    	<% end %>
			    </tbody>
			<% end %>
		</table>
	</div>
</div>